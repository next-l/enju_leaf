server {
  listen 80;
  server_name _;

  root /opt/enju_leaf/public;
  client_max_body_size 5m;

  location / {
    try_files $uri @web;
  }

  location @web {
    proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
    proxy_set_header Host $http_host;
    proxy_set_header X-Real-IP $remote_addr;
    proxy_redirect off;
    proxy_pass http://web:3000;
  }
}

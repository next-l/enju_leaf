= form_for(@user) do |f|
  - if @user.errors.any?
    #errorExplanation
      h2
        = pluralize(@user.errors.count, "error")
        |  prohibited this user from being saved:
      ul
        - @user.errors.full_messages.each do |msg|
          li
            = msg
  .field
    = f.label :username
    br
    = f.text_field :username
  .field
    = f.label :email
    br
    = f.email_field :email
  .actions
    = f.submit class: 'btn btn-default'

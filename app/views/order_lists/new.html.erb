<div id="content_detail" class="ui-corner-all ui-widget-content">
<h1 class="title"><%= t('page.new', model: t('activerecord.models.order_list')) -%></h1>
<div id="content_list">

<%= form_for(@order_list) do |f| -%>
  <%= f.error_messages -%>

  <div class="field">
    <%= f.label :title -%><br />
    <%= f.text_field :title, class: 'resource_title' -%>
  </div>
  <div class="field">
    <%= f.label t('activerecord.models.bookstore') -%><br />
    <%= f.select(:bookstore_id, @bookstores.collect{|b| [b.name, b.id]}) -%>
  </div>
  <div class="field">
    <%= f.label :note -%><br />
    <%= f.text_area :note, class: 'resource_textarea' -%>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<%- end -%>

</div>
</div>

<div id="submenu" class="ui-corner-all ui-widget-content">
  <ul>
    <li><%= link_to t('page.back'), order_lists_path -%></li>
  </ul>
</div>

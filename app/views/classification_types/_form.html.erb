<%= form_for(@classification_type) do |f| %>
  <%= f.error_messages %>

  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name, :class => 'short_name' %>
  </div>
  <div class="field">
    <%= f.label :display_name %><br />
    <%= f.text_area :display_name, :class => 'resource_textarea' %>
  </div>
  <div class="field">
    <%= f.label :note %><br />
    <%= f.text_area :note, :class => 'resource_textarea' %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>

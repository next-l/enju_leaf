<%= form_with(model: classification_type) do |f| %>
  <%= error_messages(classification_type) %>

  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name, required: true, class: 'short_name' %>
  </div>
  <div class="field">
    <%= f.label :display_name %><br />
    <%= f.text_area :display_name, class: 'form-control' %>
  </div>
  <div class="field">
    <%= f.label :note %><br />
    <%= f.text_area :note, class: 'form-control' %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>

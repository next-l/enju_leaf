<%= form_for(@bookstore) do |f| -%>
  <%= error_messages(@bookstore) -%>

  <div class="field">
    <%= f.label :name -%><br />
    <%= f.text_field :name -%>
  </div>

  <div class="field">
    <%= f.label :zip_code -%><br />
    <%= f.text_field :zip_code -%>
  </div>

  <div class="field">
    <%= f.label :address -%><br />
    <%= f.text_area :address, class: 'resource_textarea' -%>
  </div>

  <div class="field">
    <%= f.label :telephone_number -%><br />
    <%= f.phone_field :telephone_number -%>
  </div>

  <div class="field">
    <%= f.label :fax_number -%><br />
    <%= f.phone_field :fax_number -%>
  </div>

  <div class="field">
    <%= f.label :url -%><br />
    <%= f.url_field :url, class: 'resource_url' -%>
  </div>

  <div class="field">
    <%= f.label :note -%><br />
    <%= f.text_area :note, class: 'resource_textarea' -%>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<%- end -%>

<div id="content_detail">
<h1 class="title"><%= t('page.editing', :model => t('activerecord.models.form_of_work')) -%></h1>
<div id="content_list">

<%= form_for(@form_of_work) do |f| -%>
  <%= f.error_messages -%>
  <p>
    <%= f.label t('activerecord.attributes.form_of_work.display_name') -%><br />
    <%= f.text_area :display_name, :class => 'resource_textarea' -%>
  </p>

  <p>
    <%= f.label t('activerecord.attributes.form_of_work.note') -%><br />
    <%= f.text_area :note, :class => 'resource_textarea' -%>
  </p>

  <p>
    <%= f.submit t('page.update') -%>
  </p>
<%- end -%>

</div>
</div>

<div id="submenu">
  <ul>
    <li><%= link_to t('page.show'), @form_of_work -%></li>
    <li><%= link_to t('page.back'), form_of_works_path -%></li>
  </ul>
</div>

<div id="content_detail">
<h1 class="title"><%= t('page.editing', :model => t('activerecord.models.own')) -%></h1>
<div id="content_list">

<%= form_for(@own) do |f| -%>
  <%= f.error_messages -%>

  <p>
    <%= f.label t('activerecord.models.library') -%><br />
    <%= f.text_field :patron_id -%>
  </p>

  <p>
    <%= f.label t('activerecord.models.item') -%><br />
    <%= f.text_field :item_id -%>
  </p>

  <p>
    <%= f.submit t('page.update') -%>
  </p>
<%- end -%>

</div>
</div>

<div id="submenu">
  <ul>
    <li><%= link_to t('page.show'), own_path(@own) -%></li>
    <li><%= link_to t('page.back'), owns_path -%></li>
  </ul>
</div>

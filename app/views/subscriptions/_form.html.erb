<%= form_with(model: subscription) do |f| -%>
  <%= error_messages(subscription) -%>

  <div class="field">
    <%= f.label :title -%><br />
    <%= f.text_field :title, required: true, class: 'resource_title' -%>
  </div>
  <div class="field">
    <%= f.label :note -%><br />
    <%= f.text_area :note, class: 'resource_textarea' -%>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<%- end -%>

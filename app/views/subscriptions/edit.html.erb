<div id="content_detail">
<h1 class="title"><%= t('page.editing', :model => t('activerecord.models.subscription')) -%></h1>
<div id="content_list">

<%= form_for(@subscription) do |f| -%>
  <%= f.error_messages -%>

  <p>
    <%= f.label t('activerecord.attributes.subscription.title') -%><br />
    <%= f.text_field :title, :class => 'resource_title' -%>
  </p>
  <p>
    <%= f.label t('activerecord.attributes.subscription.note') -%><br />
    <%= f.text_area :note, :class => 'resource_textarea' -%>
  </p>
  <p>
    <%= f.submit t('page.update') -%>
  </p>
<%- end -%>

</div>
</div>

<div id="submenu">
  <ul>
    <li><%= link_to t('page.show'), @subscription -%></li>
    <li><%= link_to t('page.back'), subscriptions_path -%></li>
  </ul>
</div>

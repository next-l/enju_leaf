<div id="content_detail" class="ui-corner-all">
<h1 class="title"><%= t('page.editing', :model => t('activerecord.models.language')) -%></h1>
<div id="content_list">

<%= form_for(@language) do |f| -%>
  <%= f.error_messages -%>

  <div class="field">
    <%= f.label :native_name -%><br />
    <%= f.text_field :native_name -%>
  </div>

  <div class="field">
    <%= f.label :name -%>:<br />
    <%= @language.name -%>
  </div>

  <div class="field">
    <%= f.label :display_name -%><br />
    <%= f.text_area :display_name, :class => 'resource_textarea' -%>
  </div>

  <div class="field">
    <%= f.label :note -%><br />
    <%= f.text_area :note, :class => 'resource_textarea' -%>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<%- end -%>

</div>
</div>

<div id="submenu" class="ui-corner-all">
  <ul>
    <li><%= link_to t('page.show'), @language -%></li>
    <li><%= link_to t('page.back'), languages_path -%></li>
  </ul>
</div>

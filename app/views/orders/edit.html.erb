<div id="content_detail" class="ui-corner-all ui-widget-content">
<h1 class="title"><%= t('page.editing', model: t('activerecord.models.order')) -%></h1>
<div id="content_list">

<%= form_for(@order) do |f| -%>
  <%= f.error_messages -%>
  <div class="field">
    <%= f.label t('activerecord.models.order_list') -%><br />
    <%= f.text_field :order_list_id -%>
  </div>

  <div class="field">
    <%= f.label t('activerecord.models.purchase_request') -%><br />
    <%= f.text_field :purchase_request_id -%>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<%- end -%>

</div>
</div>

<div id="submenu" class="ui-corner-all ui-widget-content">
  <ul>
    <li><%= link_to t('page.show'), order_path(@order) -%></li>
    <li><%= link_to t('page.back'), orders_path -%></li>
  </ul>
</div>

<div id="content_detail" class="ui-corner-all ui-widget-content">
  <h1 class="title"><%= t('page.editing', model: t('activerecord.models.basket')) -%></h1>
  <div id="content_list">

  <%= form_for(@basket) do |f| -%>
    <%= error_messages(@basket) -%>
    <div class="field">
      <%= f.label t('activerecord.models.user') -%><br />
      <%= @basket.user.username -%>
      <%= f.hidden_field :user_id -%>
    </div>

    <div class="field">
      <%= f.label :note -%><br />
      <%= f.text_area :note, class: 'resource_textarea' -%>
    </div>

    <div class="actions">
      <%= f.submit %>
    </div>
  <%- end -%>
  </div>
</div>

<div id="submenu" class="ui-corner-all ui-widget-content">
  <ul>
    <li><%= link_to t('page.show'), basket_path(@basket) -%></li>
    <li><%= link_to t('page.back'), baskets_path(user_id: @basket.user.username) -%></li>
  </ul>
</div>

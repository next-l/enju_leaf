<%= form_for(@content_type) do |f| -%>
  <%= error_messages(@content_type) -%>

  <div class="field">
    <%= f.label :name -%><br />
    <%= f.text_field :name, required: true, class: 'resource_title' -%>
  </div>

  <div class="field">
    <%= f.label :display_name -%><br />
    <%= f.text_area :display_name, class: 'resource_textarea' -%>
  </div>

  <div class="field">
    <%= f.label :note -%><br />
    <%= f.text_area :note, class: 'resource_textarea' -%>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>

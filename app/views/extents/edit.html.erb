<div id="content_detail" class="ui-corner-all">
<h1 class="title"><%= t('page.editing', :model => t('activerecord.models.extent')) -%></h1>
<div id="content_list">

<%= form_for(@extent) do |f| -%>
  <%= f.error_messages -%>
  <p>
    <%= f.label t('activerecord.attributes.extent.name') -%><br />
    <%= f.text_field :name, :class => 'resource_title' -%>
  </p>
  <p>
    <%= f.label t('activerecord.attributes.extent.display_name') -%><br />
    <%= f.text_area :display_name, :class => 'resource_textarea' -%>
  </p>
  <p>
    <%= f.label t('activerecord.attributes.extent.note') -%><br />
    <%= f.text_area :note, :class => 'resource_textarea' -%>
  </p>
  <p>
    <%= f.submit %>
  </p>
<%- end -%>

</div>
</div>

<div id="submenu" class="ui-corner-all">
  <ul>
    <li><%= link_to t('page.show'), @extent -%></li>
    <li><%= link_to t('page.back'), extents_path -%></li>
  </ul>
</div>

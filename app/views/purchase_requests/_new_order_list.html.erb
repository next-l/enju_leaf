<div id="content_detail" class="ui-corner-all ui-widget-content">
<h1 class="title"><%= t('page.new', model: t('activerecord.models.purchase_request')) -%></h1>
<div id="content_list">

<%= form_for(@purchase_request, url: order_list_purchase_requests_path(@order_list)) do |f| -%>
  <%= f.error_messages -%>

  <div class="field">
    <%= f.label t('activerecord.models.user') -%><br />
    <%- if @user -%>
      <%= link_to @user.username, @user.profile if @user.profile -%>
    <%- else -%>
      <%= link_to current_user.username, current_user.profile if current_user.profile -%>
    <%- end -%>
  </div>

  <div class="field">
    <%= f.label :title -%><br />
    <%= f.text_area :title, class: 'resource_textarea' -%>
  </div>

  <div class="field">
    <%= f.label :author -%><br />
    <%= f.text_area :author, class: 'resource_textarea' -%>
  </div>

  <div class="field">
    <%= f.label :publisher -%><br />
    <%= f.text_area :publisher, class: 'resource_textarea' -%>
  </div>

  <div class="field">
    <%= f.label :isbn -%><br />
    <%= f.text_field :isbn, class: 'resource_isbn_issn' -%>
  </div>

  <div class="field">
    <%= f.label :pub_date -%><br />
    <%= f.text_field :pub_date -%>
  </div>

  <div class="field">
    <%= f.label :price -%><br />
    <%= f.text_field :price, class: 'resource_integer' -%>
  </div>

  <div class="field">
    <%= f.label :url -%><br />
    <%= f.url_field :url, class: 'resource_url' -%>
  </div>

  <div class="field">
    <%= f.label :note -%><br />
    <%= f.text_area :note, class: 'resource_textarea' -%>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>

<%- end -%>

</div>
</div>

<div id="submenu" class="ui-corner-all ui-widget-content">
  <ul>
    <%- if @user -%>
      <li><%= link_to t('page.back'), purchase_requests_path(user_id: @user.username) -%></li>
    <%- else -%>
      <li><%= link_to t('page.back'), purchase_requests_path -%></li>
    <%- end -%>
  </ul>
</div>

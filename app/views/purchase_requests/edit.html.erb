<div id="content_detail" class="ui-corner-all ui-widget-content">
<h1 class="title"><%= t('page.editing', model: t('activerecord.models.purchase_request')) -%></h1>
<div id="content_list">

<%= form_for(@purchase_request) do |f| -%>
  <%= f.error_messages -%>

  <div class="field">
    <%= f.label t('activerecord.models.user') -%><br />
    <%= link_to @purchase_request.user.username, @purchase_request.user.profile if @purchase_request.user.try(:profile) -%>
    <%= f.hidden_field :user_id -%>
  </div>

  <div class="field">
    <%= f.label :title -%><br />
    <%= f.text_area :title, class: 'resource_textarea' -%>
  </div>

  <div class="field">
    <%= f.label :author -%><br />
    <%= f.text_area :author, class: 'resource_textarea' -%>
  </div>

  <div class="field">
    <%= f.label :publisher -%><br />
    <%= f.text_area :publisher, class: 'resource_textarea' -%>
  </div>

  <div class="field">
    <%= f.label :isbn -%><br />
    <%= f.text_field :isbn, class: 'resource_isbn_issn' -%>
  </div>

  <div class="field">
    <%= f.label :pub_date -%><br />
    <%= f.text_field :pub_date -%>
  </div>

  <div class="field">
    <%= f.label :price -%><br />
    <%= f.text_field :price, class: 'resource_integer' -%>
  </div>

  <div class="field">
    <%= f.label :url -%><br />
    <%= f.url_field :url, class: 'resource_url' -%>
  </div>

  <div class="field">
    <%= f.label :note -%><br />
    <%= f.text_area :note, class: 'resource_textarea' -%>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<%- end -%>
</div>
</div>

<div id="submenu" class="ui-corner-all ui-widget-content">
  <ul>
    <li><%= link_to t('page.show'), @purchase_request -%></li>
    <li><%= link_to t('page.back'), purchase_requests_path(user_id: @purchase_request.user.username, page: flash[:page] ||= nil) -%></li>
  </ul>
</div>

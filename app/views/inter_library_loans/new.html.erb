<div id="content_detail">
  <h1 class="title"><%= t('page.new', :model => t('activerecord.models.inter_library_loan')) -%></h1>
<div id="content_list">

<%= form_for(@inter_library_loan) do |f| -%>
  <%= f.error_messages -%>

  <p>
    <%= f.label t('inter_library_loan.borrowing_library') -%><br />
    <%= f.select(:borrowing_library_id, @libraries.collect{|l| [l.display_name.localize, l.id]}) -%>
  </p>

  <p>
    <%= f.label t('activerecord.attributes.inter_library_loan.requested_at') -%><br />
    <%= f.text_field :requested_at, :class => 'date_field' -%>
  </p>

  <p>
    <%= f.label t('activerecord.models.item') -%><br />
    <%- if @item -%>
      <%= link_to h(@item.shelf.library.display_name.localize), library_path(@item.shelf.library.name) -%>
      <%= link_to h(@item.item_identifier), @item -%>
      (<%= link_to h(@item.manifestation.original_title), @item.manifestation -%>)
      <%= f.hidden_field :item_identifier, :value => @item.item_identifier -%>
    <%- else -%>
      <%= f.text_field :item_identifier, :class => 'resource_item_identifier' -%>
    <%- end -%>
  </p>

  <p>
    <%= f.submit t('page.create') -%>
  </p>
<%- end -%>

</div>
</div>

<div id="submenu">
  <ul>
    <li><%= link_to t('page.back'), inter_library_loans_path -%></li>
  </ul>
</div>

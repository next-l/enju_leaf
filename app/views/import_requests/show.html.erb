<div id="content_detail">
<h1 class="title"><%= t('page.showing', :model => t('activerecord.models.import_request')) -%></h1>
<div id="content_list">
<p>
  <strong>Id:</strong>
  <%= @import_request.id -%>
</p>

<p>
  <strong><%= t('activerecord.models.user') -%>:</strong>
  <%= link_to h(@import_request.user.username), user_path(@import_request.user.username) -%>
</p>

<p>
  <strong><%= t('activerecord.attributes.import_request.isbn') -%>:</strong>
  <%= @import_request.isbn -%>
</p>

<p>
  <strong><%= t('page.created_at') -%>:</strong>
  <%=l @import_request.created_at -%>
</p>

<p>
  <strong><%= t('activerecord.attributes.import_request.state') -%>:</strong>
  <%= localized_state(@import_request.state) -%>
</p>

<p>
  <strong><%= t('activerecord.models.manifestation') -%>:</strong>
  <%= link_to h(@import_request.manifestation.original_title), @import_request.manifestation if @import_request.manifestation -%>
</p>

</div>
</div>

<div id="submenu">
  <ul>
    <%- if can? :update, @import_request -%>
      <li><%= link_to t('page.edit'), edit_import_request_path(@import_request) -%></li>
    <%- end -%>
    <li><%= link_to t('page.back'), import_requests_path -%></li>
  </ul>
</div>

<div id="content_detail" class="col col-md-9">
<h1 class="title card-header"><%= t('page.showing', model: t('activerecord.models.import_request')) -%></h1>
<div id="content_list" class="card-body">
<p id="notice"><%= notice %></p>

<p>
  <strong>Id:</strong>
  <%= @import_request.id -%>
</p>

<p>
  <strong><%= t('activerecord.models.user') -%>:</strong>
  <%= link_to @import_request.user.username, @import_request.user.profile if @import_request.user.try(:profile) -%>
</p>

<p>
  <strong><%= t('activerecord.attributes.import_request.isbn') -%>:</strong>
  <%= @import_request.isbn -%>
</p>

<p>
  <strong><%= t('page.created_at') -%>:</strong>
  <%=l @import_request.created_at -%>
</p>

<p>
  <strong><%= t('activerecord.attributes.import_request.state') -%>:</strong>
  <%= localized_state(@import_request.current_state) -%>
</p>

<p>
  <strong><%= t('activerecord.models.manifestation') -%>:</strong>
  <%= link_to @import_request.manifestation.original_title, @import_request.manifestation if @import_request.manifestation -%>
</p>

</div>
</div>

<div id="submenu" class="col">
  <ul>
    <li><%= back_to_index(flash[:page_info]) -%></li>
  </ul>
</div>

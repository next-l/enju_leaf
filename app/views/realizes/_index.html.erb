<div id="content_detail" class="col col-md-9">
<h1 class="title"><%= t('page.listing', model: t('activerecord.models.realize')) -%></h1>
<div id="content_list">

<table class="table table-striped index">
  <tr>
    <th><%= t('activerecord.models.agent') -%></th>
    <th><%= t('activerecord.models.manifestation') -%></th>
    <th></th>
  </tr>

  <%- @realizes.each do |realize| -%>
  <tr class="line<%= cycle("0", "1") -%>">
    <td><%= link_to realize.agent.full_name, realize.agent -%></td>
    <td><%= link_to realize.expression.original_title, realize.expression -%></td>
    <td>
      <%- if policy(realize).destroy? -%>
        <%= link_to t('page.show'), realize -%>
        <%= link_to t('page.destroy'), realize, data: {confirm: t('page.are_you_sure')}, method: :delete -%>
      <%- end -%>
    </td>
  </tr>
<%- end -%>
</table>

<%= paginate(@realizes) -%>
</div>
</div>

<div id="submenu" class="col">
  <%- if policy(Realize).create? -%>
    <ul>
      <li><%= link_to t('page.new', model: t('activerecord.models.realize')), new_realize_path -%></li>
    </ul>
  <%- end -%>
</div>

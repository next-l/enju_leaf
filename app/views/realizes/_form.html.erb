<%= form_for(@realize) do |f| -%>
  <%= error_messages(@realize) -%>

  <div class="field">
    <%= f.label t('activerecord.models.agent') -%><br />
    <%- if @realize.agent -%>
      <%= link_to @realize.agent.full_name, @realize.agent -%>
      <%= f.hidden_field :agent_id -%>
    <%- else -%>
      <%= f.text_field :agent_id -%>
    <%- end -%>
  </div>

  <div class="field">
    <%= f.label t('activerecord.models.manifestation') -%><br />
    <%- if @realize.expression -%>
      <%= link_to @realize.expression.original_title, @realize.expression -%>
      <%= f.hidden_field :expression_id -%>
    <%- else -%>
      <%= f.text_field :expression_id -%>
    <%- end -%>
  </div>

  <div class="field">
    <%= f.label t('activerecord.models.realize_type') -%><br />
    <%= f.select :realize_type_id, @realize_types.map{|r| [r.display_name.localize, r.id]} %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<%- end -%>

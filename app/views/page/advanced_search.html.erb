  $('#pub_date_from').setCalendar({src:'/assets/calendar.png'});
  $('#pub_date_to').setCalendar({src:'/assets/calendar.png'});
  $('#acquired_from').setCalendar({src:'/assets/calendar.png'});
  $('#acquired_to').setCalendar({src:'/assets/calendar.png'});

          <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
              <%= t('activerecord.models.event') -%>
            </a>
            <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
              <%- unless @library_group.real_libraries.empty? -%>
                <li><%= link_to t('page.calendar'), events_path(mode: 'calendar'), class: 'dropdown-item' -%></li>
                <li><%= link_to t('event.all'), events_path, class: 'dropdown-item' -%></li>
                <%- @library_group.real_libraries.each do |library| -%>
                  <li><%= link_to library.display_name.localize, events_path(library_id: library.name), class: 'dropdown-item' -%></li>
                <%- end -%>
                <%- if policy(Event).create? -%>
                  <li><%= link_to t('page.import'), new_event_import_file_path, class: 'dropdown-item' -%></li>
                <%- end -%>
              <%- end -%>
            </ul>
          </li>
          <%- if current_user.try(:has_role?, 'Librarian') -%>
            <li class="nav-item dropdown">
              <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                <% if current_user.try(:has_role?, 'Librarian') %>
                  <%= t('page.management') -%>
                <% else %>
                  <%= t('page.configuration') -%>
                <% end %>
              </a>
              <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                <li><%= link_to t('user.management'), profiles_path, class: 'dropdown-item' -%></li>
                <li><%= link_to t('page.agent_management'), agents_path, class: 'dropdown-item' -%></li>
                <li><%= link_to t('page.import'), page_import_path, class: 'dropdown-item' -%></li>
                <li><%= link_to t('page.export'), page_export_path, class: 'dropdown-item' -%></li>
                <% if defined?(EnjuPurchaseRequest) %>
                  <li><%= link_to t('activerecord.models.order_list'), order_lists_path, class: 'dropdown-item' -%></li>
                <% end %>
                <li><%= link_to t('page.statistics'), page_statistics_path, class: 'dropdown-item' -%></li>

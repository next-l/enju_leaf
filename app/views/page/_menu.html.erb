        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav me-auto mb-2 mb-lg-0">
          <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
              <% if current_user.try(:has_role?, 'Librarian') %>
                <%= t('page.librarian_circulation') -%>
              <% else %>
                <%= t('page.user_circulation') -%>
              <% end %>
            </a>
            <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
              <%- if user_signed_in? -%>
                <%- if current_user.has_role?('Librarian') -%>
                  <li><%= link_to t('page.checkout'), new_basket_path, class: 'dropdown-item' -%></li>
                  <li><%= link_to t('page.checkin'), new_checkin_path, class: 'dropdown-item' -%></li>
                <% end %>
                <li>
                  <%= link_to t('page.listing', model: t('activerecord.models.reserve')), reserves_path, class: 'dropdown-item' -%>
                </li>
                <% if defined?(EnjuInterLibraryLoan) %>
                  <% if current_user.has_role?('Librarian') -%>
                    <li><%= link_to t('activerecord.models.inter_library_loan'), inter_library_loans_path, class: 'dropdown-item' -%></li>
                  <% end %>
                <% end %>
                <li><%= link_to t('page.checkout_history'), checkouts_path, class: 'dropdown-item' -%></li>
              <%- else -%>
                <li><%= link_to t('page.checkout_history'), checkouts_path, class: 'dropdown-item' -%></li>

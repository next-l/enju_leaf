              <li><%= link_to t('page.catalog_search'), manifestations_path, class: 'dropdown-item' %></li>
            </ul>
          </li>
          <%- if user_signed_in? and (current_user.has_role?('Librarian') or defined?(EnjuBookmark)) -%>
            <li class="nav-item dropdown">
              <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                <%= t('page.acquisition') -%>
              </a>
              <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                <%- if current_user.has_role?('Librarian') -%>
                  <li><%= link_to t('import_request.enter_isbn'), new_import_request_path, class: 'dropdown-item' -%></li>
                  <% if defined?(EnjuNdl) %>
                    <li><%= link_to t('enju_ndl.import_from_ndl_search'), ndl_books_path, class: 'dropdown-item' -%></li>
                  <% end %>
                  <% if defined?(EnjuNii) %>
                    <li><%= link_to t('enju_nii.import_from_cinii_books'), cinii_books_path, class: 'dropdown-item' -%></li>
                  <% end %>
                  <% if defined?(EnjuLoc) %>
                    <li><%= link_to t('enju_loc.import_from_loc_search'), loc_search_index_path, class: 'dropdown-item' -%></li>
                  <% end %>
                  <li><%= link_to t('page.add_resource_manually'), new_manifestation_path, class: 'dropdown-item' -%></li>
                  <li><%= link_to t('page.serial'), manifestations_path(serial: true), class: 'dropdown-item' -%></li>
                  <li><%= link_to t('page.import_from_file'), new_resource_import_file_path, class: 'dropdown-item' -%></li>
                  <li><%= link_to t('activerecord.models.accept'), new_accept_path, class: 'dropdown-item' -%></li>
                  <% if defined?(EnjuIr) %>
                    <li><%= link_to t('activemodel.models.resource'), resources_path, class: 'dropdown-item' -%></li>
                  <% end %>
                <%- end -%>
                <% if defined?(EnjuBookmark) %>
                  <li><%= link_to t('page.listing', model: t('activerecord.models.bookmark')), bookmarks_path, class: 'dropdown-item' -%></li>

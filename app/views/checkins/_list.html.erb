<div style="color: red"><%= flash[:message] -%></div>

<div class="search_form">
  <%= form_for @checkin, :html => {:method => :post, :class => 'well form-search'}, :url => basket_checkins_path(@basket), :remote => true do |f| -%>
    <%= f.error_messages %>
    <%= t('activerecord.attributes.item.item_identifier') -%>:
    <%= f.search_field :item_identifier, :class => 'resource_item_identifier' -%>
    <%= f.submit t('checkin.checkin'), 'data-disable-with' => t('page.saving'), :class => 'btn' -%>
  <%- end -%>
  <%= javascript_tag("$('#checkin_item_identifier').focus().select();") %>
</div>

<%= render 'checkin' %>
